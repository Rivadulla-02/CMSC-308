using System;

namespace Activity_5_Rivadulla
{
  
      public class boardMarker
     {

 

       public string color = ""; 

       public int content = 10;

 

       public void write(string msg)
      {

 

      content--;

      Console.WriteLine(msg);

      Console.WriteLine("Remaining ink: " + content);

      }

 

      public void refill(){

      content++;

      Console.WriteLine("Remaining ink: " + content);

      }

 

      public void changeColor(string userColor)
      {
      color = userColor;


      switch(color){

      case "Black":

      color = "black";

      break;

      case "Blue":

      color = "blue";

      break;

      case "Red":

      color = "red"; 

      break;
      default:
      color = "Black";
      break;

      } 

     Console.WriteLine("Marker Color: " + color);

     }


     public void checkStatus()
    {

     Console.WriteLine("Remaining ink: " + content);
     Console.WriteLine("Marker Color: " + color);
     Console.ReadKey();

    }
    
 } 
 
 class Program
  {
    static void Main(string[] args)
    {
     boardMarker myMarker = new boardMarker();


     int choice = 0;
     string msg = string.Empty;
     string userColor = string.Empty;

 

     while(true)
     {
     Console.Clear();
     Console.WriteLine("==Menu==");
     Console.WriteLine("1. Display Info ");
     Console.WriteLine("2. Change Color");
     Console.WriteLine("3. Refill");
     Console.WriteLine("4. Write");
     Console.WriteLine("----------------------");
     Console.Write("Enter Your Choice: ");
     choice = Convert.ToInt32(Console.ReadLine());

 

     switch(choice){


     case 1:
     Console.Clear();
     myMarker.checkStatus();
     Console.Write("====================");
     Console.Write("\n");
     break;



     case 2: 
     Console.Clear();
     Console.WriteLine("Only Black, Blue and Red is available color.");
     Console.WriteLine("Take note: The first letter is always capital.");
     Console.Write("Choose Your Color: ");
     userColor = Console.ReadLine();
     Console.Write("\n");
     myMarker.changeColor(userColor);
     Console.ReadKey();
     Console.Write("====================");
     Console.Write("\n");
     break;



     case 3:
     Console.Clear();
     myMarker.refill(); 
     Console.Write("====================");
     Console.Write("\n");
     break;



     case 4:
     Console.Write("\n");
     Console.Write("Your Message: ");
     Console.Write("\n");
     msg = Console.ReadLine();

     switch(myMarker.color){

     case "blue":
     Console.ForegroundColor = ConsoleColor.Blue;
     break;

     case "red":
     Console.ForegroundColor = ConsoleColor.Red;
     break;
     
     case "black":   
     Console.ForegroundColor = ConsoleColor.Black;    
     break;
     
     }

     Console.Write("\n");
     myMarker.write(msg);
     Console.ReadKey();  
     Console.Write("====================");
     Console.Write("\n");
     break;

     default: 

     Console.WriteLine("Invalid command...");

     break;
    }
   }
  }
 }
}
